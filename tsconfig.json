{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        // 这样就可以对 `this` 上的数据属性进行更严格的推断`
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "lib": ["esnext", "dom"],
        "types": ["vite/client"],
        "baseUrl": ".",
        "paths": {
            "/@/*": ["src/*"],
            "/#/*": ["types/*"]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "types/**/*.d.ts",
        "types/**/*.ts",
        "build/**/*.ts",
        "build/**/*.d.ts",
        "mock/**/*.ts",
        "vite.config.ts"
    ],
    "exclude": ["node_modules", "dist", "**/*.js"]
}

